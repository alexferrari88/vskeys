{
  "manifest_version": 3,
  "name": "VS Code Shortcuts for Web",
  "version": "1.1.1", 
  "description": "Enables VS Code text editing shortcuts in browser text fields, with customization.",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "common.js",
        "content_utils.js",
        "content_operations.js",
        "content_actions.js",
        "content_script.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html",
    "default_title": "VS Code Shortcuts Settings"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}