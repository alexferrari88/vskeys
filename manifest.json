{
  "manifest_version": 3,
  "name": "VS Keys",
  "version": "0.0.1",
  "description": "Enables VS Code text editing shortcuts in browser text fields, with customization.",
  "background": {
    "service_worker": "src/sw.js"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/common.js",
        "src/content_utils.js",
        "src/content_operations.js",
        "src/content_actions.js",
        "src/content_script.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "options_page": "src/options.html",
  "action": {
    "default_popup": "src/options.html",
    "default_title": "VS Code Shortcuts Settings"
  },
  "icons": {
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/options.html",
        "src/options.js",
        "src/common.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}